<Window x:Class="QuickNoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickNoteApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="800"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <TextBox Name="TextEditor" AcceptsReturn="True" AcceptsTab="True"
             VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
             TextWrapping="Wrap" FontFamily="Consolas" FontSize="14"
             Margin="0" TextChanged="TextEditor_TextChanged"/>
    </Grid>
</Window>
